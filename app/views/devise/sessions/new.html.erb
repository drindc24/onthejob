<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Sign In</h3>
        </div>
        <div class="panel-body">
          <form role="form">
            <fieldset>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group"><%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "E-mail", :name => "email" %></div>
                  <div class="form-group"><%= f.password_field :password, :class => "form-control", :placeholder => "Password", :name => "password", :type => "password", autocomplete: "off" %></div>
                  <% if devise_mapping.rememberable? -%>
                    <div class="checkbox"><%= f.check_box :remember_me, :name => "checkbox", :type => "checkbox", :value => "Keep me signed in" %></div>
                  <% end -%>

                  <%= f.submit "Sign in", :class => "btn btn-lg btn-success btn-block" %>
                <% end %>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

