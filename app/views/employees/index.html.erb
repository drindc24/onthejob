<div id="container">
  <h1 class="page-header"><%= current_employee.company.full_name %></h1>
  <% if @employees.empty? %>
    <i> No employees found </i>
  <% else %>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                  Employee List
                </div>
            <!-- /.panel-heading -->
              <% @employees.each do |employee| %>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                  <th>Name</th>
                                  <th>Department</th>
                                  <th>Level</th>
                                  <th>Sick Leaves</th>
                                  <th>Vacation Leaves</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX">
                                  <td><%= link_to employee.name, company_employee_path(employee.company, employee) %></td>
                                  <td><%= employee.department.name %></td>
                                  <td><%= employee.level %></td>
                                  <td><%= employee.sick_leaves %></td>
                                  <td><%= employee.vacation_leaves %></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
              <% end %>
            </div>
        </div>
    </div>
  <% end %>
</div>